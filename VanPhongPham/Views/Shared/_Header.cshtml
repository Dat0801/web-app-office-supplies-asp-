﻿@{
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
}
<style>
    #suggestions {
        border: 1px solid #ccc;
        display: none;
        position: absolute;
        background: white;
        width: 300px;
        z-index: 9999;
    }

        #suggestions div {
            padding: 10px;
            cursor: pointer;
        }

            #suggestions div:hover {
                background-color: #f1f1f1;
            }
</style>
